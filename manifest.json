{
    "manifest_version": 2,
    "name": "Doggify",
    "version": "1.0",
    "version_name":"1.0 Initial Extension",
    "description": "A simple extension that automatically replaces loaded pictures on a website with doggos.",
    "developer": {
      "name":"Sudoblark",
      "url":"https://sudoblark.com"
    },
    "incognito":"not_allowed",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["beautiful-doggos.js"]
        }
      ],
    "icons": {
      "48": "icons/32-paw.png"
    },
    "permissions" :[
        "https://dog.ceo/api/*",
        "storage"
    ],
    "options_ui": {
      "page":"settings/settings.html"
    },
    "applications": {
      "gecko": {
        "id":"bclark@sudoblark.com"
      }
    }

}
